<h1>Eat Da Burger or Burgers by Bob!</h1>



<div class="container">
    <div class="row">
        <!-- want to hide this panel if not burgers ready to be eaten by calling getReady and checking return falue -->
            <div class="col-sm-6">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h2 class="panel-title">Burgers of the Day - To Be Eaten!</h2>            
                    </div>
                    <div class="panel-body">
                        <!-- show the id and burgername for each burger not yet devoured -->
                        {{#each burgers}}
                            {{#unless this.devoured}}
                                <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                {{this.id}}. {{this.burger_name}}<button class ="btn-success btn-xs" type="submit">Devour Me!</button>
                                </form>
                            
                            {{/unless}}
                        {{/each}}
                    </div>
                </div>

            </div>
        <div class="col-sm-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h2 class="panel-title">Burgers of the Day - Already Eaten!</h2>
                </div>
                <div class="panel-body">
                    <!-- show the id and burgername for each burger that has been devoured -->
                    {{#each burgers}}
                        {{#if this.devoured}}

                            {{this.id}}. {{this.burger_name}}
                            <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            </form>

                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devour">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured Already!<br>
                <input type="radio" name="devoured" value="0"> Ready to be devoured
            </div>

            <button type="submit">Add Burger</button>
        </form>        

</div>

